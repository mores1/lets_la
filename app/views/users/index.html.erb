<div class="container">
  <div class="row">
    <h1 class="text-center font-weight-bolder">ユーザー一覧</h1>
  </div>
</div>
<div class="row">
  <div class="col-10 offset-1">
    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th>ユーザーID</th>
          <th>ユーザーネーム</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><u><%= link_to user.name, edit_user_path(user), class: "text-dark" %></u></td>
          <td><%= user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>